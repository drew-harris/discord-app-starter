{
  "name": "discord-app-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bunx --bun vite",
    "build": "bun run build:client && pnpm run build:server",
    "build:client": "tsc && vite build --mode client",
    "build:server": "tsc && vite build --outDir dist/server --ssr src/server.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@hono/node-server": "^1.11.2",
    "@hono/vite-dev-server": "^0.12.1",
    "hono": "^4.4.0",
    "nanoid": "^5.0.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "replicache": "^14.2.2",
    "replicache-react": "^5.0.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/bun": "^1.1.3",
    "@types/node": "^20.12.13",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  }
}
